{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"strict": true,
		"target": "ESNext"
	},
	"include": ["./src/**/*"]
}
